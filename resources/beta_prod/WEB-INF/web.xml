  </filter>
  <filter-mapping>
    <filter-name>WebContextFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
      <filter-name>CampaignTrackingFilter</filter-name>
      <filter-class>
